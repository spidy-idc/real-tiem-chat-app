<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/chat-room.css" type="text/css">
    <title>Chat Room</title>
</head>
<body>
    <div class="container py-5 px-4">
  <!-- For demo purpose-->
  <header class="text-center">
    <h1 class="display-4 text-white">Welcome {{current_user.username}}</h1>
    </p>
  </header>

  <div class="row rounded-lg overflow-hidden shadow">
    <!-- Users box-->
    <div class="col-5 px-0">
      <div class="bg-white">

        <div id="chatBoxMargin" class="bg-gray px-4 py-2 bg-light">
          <p class="h5 mb-0 py-1">Recent</p>
        </div>

        <div id="chatBoxMargin" class="messages-box">
          <div id="nameBoxGroup" class="list-group rounded-0">
            {{#each users}}
            <a id="nameBox" class="list-group-item list-group-item-action text-white rounded-0">
                    <span>{{username}}</span>
                    <hr>
            </a>
            {{/each}}
          </div>
        </div>
      </div>
    </div>
    <!-- Chat Box-->
    <div class="col-7 px-0">
      <div class="px-4 py-5 chat-box bg-white">

    
        <div id="message_placeholder"></div>

      </div>

      <!-- Typing area -->
      <form id="messageForm" class="bg-light">
        <div class="input-group">
          <input id="messageFormText" type="text" placeholder="Type a message" aria-describedby="button-addon2" class="form-control rounded-0 border-0 py-4 bg-light">
          <div class="input-group-append">
            <button id="button-addon2 sendMessage" type="submit" class="btn btn-link"> <i class="fa fa-paper-plane"></i>Send Message</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
<script src="/js/chat.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
</body>
</html>